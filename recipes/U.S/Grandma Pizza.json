{
    "headline": "Grandma Pizza",
    "name": "Grandma Pizza",
    "description": "This Long Island-style grandma pizza features a homemade savory sauce and cheese topping that's a great alternative to delivery!",
    "recipeCuisine": [
        "U.S.",
        "American"
    ],
    "totalTime": "PT220M",
    "cookTime": "PT50M",
    "nutrition": {
        "@type": "NutritionInformation",
