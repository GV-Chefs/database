    "recipeIngredient": [
        "3 tablespoons hoisin sauce",
        "1 tablespoon ketchup",
        "1 tablespoon honey",
        "1 tablespoon soy sauce",
        "1 tablespoon sake",
        "1 teaspoon rice vinegar",
        "1 teaspoon lemon juice",
        "1 teaspoon grated fresh ginger",
        "0.5 teaspoon grated fresh garlic",
        "0.25 teaspoon Chinese five-spice powder",
        "1 pound pork spareribs"
    ],
    "recipeInstructions": [
        {
            "@type": "HowToStep",
            "image": [
                {
                    "@type": "ImageObject",
                    "url": "https://www.allrecipes.com/thmb/hZJmWEr8pauUVY0gikmJE55sMBs=/1500x0/filters:no_upscale():max_bytes(150000):strip_icc()/AR-77408-chinese-spareribs-DDMFS-step-1-2ddcf2774fb848afa71b052a5e29940f.jpg"
                }
            ],
            "text": "Gather all ingredients."
        },
        {
            "@type": "HowToStep",
            "image": [
                {
                    "@type": "ImageObject",
                    "url": "https://www.allrecipes.com/thmb/VXoVgrUDAWlhemavaakB-mQfupo=/1500x0/filters:no_upscale():max_bytes(150000):strip_icc()/AR-77408-chinese-spareribs-DDMFS-step-2-45e6a9bc26a3473eb55db3ba196a5011.jpg"
                }
            ],
            "text": "Mix hoisin sauce, ketchup, honey, soy sauce, sake, rice vinegar, lemon juice, ginger, garlic, and five-spice powder together in a shallow glass dish. Place ribs in the dish and turn to coat. Cover and marinate in the refrigerator for 2 hours or up to overnight."
        },
        {
            "@type": "HowToStep",
            "image": [
                {
                    "@type": "ImageObject",
                    "url": "https://www.allrecipes.com/thmb/GLcvPvFLYf4yQrAiGWkK-HgvRXk=/1500x0/filters:no_upscale():max_bytes(150000):strip_icc()/AR-77408-chinese-spareribs-DDMFS-step-4-b779d965533f4930bfd6f31328fa9588.jpg"
                }
            ],
            "text": "Preheat the oven to 325 degrees F (165 degrees C). Fill a broiler tray with enough water to cover the bottom. Place the grate or a rack over the tray; arrange ribs on the grate."
        },
        {
            "@type": "HowToStep",
            "image": [
                {
                    "@type": "ImageObject",
                    "url": "https://www.allrecipes.com/thmb/1oQOx-_fhsI2aE_fer4ORyeQ-Xw=/1500x0/filters:no_upscale():max_bytes(150000):strip_icc()/AR-77408-chinese-spareribs-DDMFS-step-5-769234f58d564219b5456d1f0f3b6d0d.jpg"
                }
            ],
            "text": "Cook in the preheated oven on the center rack for 40 minutes, turning and brushing with marinade every 10 minutes."
        },
        {
            "@type": "HowToStep",
            "image": [
                {
                    "@type": "ImageObject",
                    "url": "https://www.allrecipes.com/thmb/kDdNwMUIa3gp70YdybtVK8WsgZ0=/1500x0/filters:no_upscale():max_bytes(150000):strip_icc()/AR-77408-chinese-spareribs-DDMFS-beauty-4x3-f8a922a5c45a4e758f4a05279b8762fe.jpg"
                }
            ],
            "text": "Let marinade cook on for final 10 minutes to make a glaze. Finish under the broiler if desired. Discard any remaining marinade."
        }
    ],
    "recipeYield": [
        "2"
    ]
}