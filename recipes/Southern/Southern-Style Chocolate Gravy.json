    "recipeIngredient": [
        "0.75 cup white sugar",
        "0.25 cup cocoa",
        "3 tablespoons all-purpose flour",
        "2 cups milk",
        "1 tablespoon butter, softened",
        "2 teaspoons vanilla"
    ],
    "recipeInstructions": [
        {
