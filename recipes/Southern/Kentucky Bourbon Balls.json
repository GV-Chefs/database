    "recipeIngredient": [
        "1 cup chopped nuts",
        "5 tablespoons Kentucky bourbon",
        "1 (16 ounce) package confectioners' sugar",
        "0.5 cup butter, softened",
        "waxed paper",
        "18 ounces semisweet chocolate"
    ],
    "recipeInstructions": [
        {
            "@type": "HowToStep",
            "image": [
                {
                    "@type": "ImageObject",
                    "url": "https://www.allrecipes.com/thmb/KYOvaq6pSGqUyaIYF2Km2jAWarE=/1500x0/filters:no_upscale():max_bytes(150000):strip_icc()/176961-kentucky-bourbon-balls-DDMFS-Step1-2605-e6e4c8e6a1f84c6a9f906a992859dff5.jpg"
                }
            ],
            "text": "Gather all ingredients."
        },
        {
            "@type": "HowToStep",
            "image": [
                {
                    "@type": "ImageObject",
                    "url": "https://www.allrecipes.com/thmb/_Qw7lpE7gSiBzQeiCVGVMHez4kg=/1500x0/filters:no_upscale():max_bytes(150000):strip_icc()/176961-kentucky-bourbon-balls-DDMFS-Step2-2609-1-e64040574b374134a6a58d8e342c4915.jpg"
                }
            ],
            "text": "Place nuts in a sealable jar. Pour bourbon over nuts; seal and allow to soak for 8 hours to overnight."
        },
        {
            "@type": "HowToStep",
            "image": [
                {
                    "@type": "ImageObject",
                    "url": "https://www.allrecipes.com/thmb/asHoY7Hr6L7L_JV_-u83NixfaK4=/1500x0/filters:no_upscale():max_bytes(150000):strip_icc()/176961-kentucky-bourbon-balls-DDMFS-Step3-2611-1-80f2f26a7b674760b66a571e2a5c9268.jpg"
                }
            ],
            "text": "Mix sugar and butter in a medium bowl; fold in soaked nuts with bourbon. Form mixture into 3/4-inch balls and refrigerate for 8 hours to overnight."
        },
        {
            "@type": "HowToStep",
            "text": "Line a baking tray with waxed paper; set aside."
        },
        {
            "@type": "HowToStep",
            "text": "Melt chocolate in the top of a double boiler over just-barely simmering water, stirring frequently and scraping down the sides with a rubber spatula to avoid scorching."
        },
        {
            "@type": "HowToStep",
            "image": [
                {
                    "@type": "ImageObject",
                    "url": "https://www.allrecipes.com/thmb/6s0vGaxKWN3bIE7GUvG153IHXAU=/1500x0/filters:no_upscale():max_bytes(150000):strip_icc()/176961-kentucky-bourbon-balls-DDMFS-Step4-2665-1-e2d1d8acb880441b8af0817b521e326c.jpg"
                }
            ],
            "text": "Roll balls in melted chocolate to coat; arrange on the prepared tray. Store in the refrigerator until serving."
        }
    ],
    "recipeYield": [
        "24"
    ]
}