    "recipeCategory": [
        "Dinner"
    ],
    "recipeIngredient": [
        "2 cups red lentils",
        "3 cups water, or more as needed",
        "1 tablespoon vegetable oil",
        "1 large onion, diced",
        "2 tablespoons curry paste",
        "1 tablespoon curry powder",
        "1 teaspoon ground turmeric",
        "1 teaspoon ground cumin",
        "1 teaspoon chili powder",
        "1 teaspoon salt",
        "1 teaspoon white sugar",
        "1 teaspoon minced garlic",
        "1 teaspoon minced fresh ginger",
        "1 (14.25 ounce) can tomato puree"
    ],
    "recipeInstructions": [
        {
            "@type": "HowToStep",
            "image": [
                {
                    "@type": "ImageObject",
                    "url": "https://www.allrecipes.com/thmb/kYG5vXfuNQpGLNV34vXjO2ocDm8=/1500x0/filters:no_upscale():max_bytes(150000):strip_icc()/AR-16641-red-lentil-curry-ddmfs-4x3-step-01-831612b08a7749989b0e1067562a49c3.jpg"
                }
            ],
            "text": "Gather all ingredients."
        },
        {
            "@type": "HowToStep",
            "image": [
                {
                    "@type": "ImageObject",
                    "url": "https://www.allrecipes.com/thmb/4CxsWltT1XWEdDYNT76ghzypdFw=/1500x0/filters:no_upscale():max_bytes(150000):strip_icc()/AR-16641-red-lentil-curry-ddmfs-4x3-step-02-27b97c6588f146ff9047143836f03903.jpg"
                }
            ],
            "text": "Wash lentils in cold water until water runs clear."
        },
        {
            "@type": "HowToStep",
            "image": [
                {
                    "@type": "ImageObject",
                    "url": "https://www.allrecipes.com/thmb/4uYeIrxcCT7OX3jPF1Me9djHdy8=/1500x0/filters:no_upscale():max_bytes(150000):strip_icc()/AR-16641-red-lentil-curry-ddmfs-4x3-step-03-cc5d13d084774d509d866b725fdd7b34.jpg"
                }
            ],
            "text": "Put lentils in a pot with enough water to cover; bring to a boil and reduce heat to medium-low. Cover and simmer, adding water as needed to keep lentils covered, until tender, 15 to 20 minutes. Drain."
        },
        {
            "@type": "HowToStep",
            "image": [
                {
                    "@type": "ImageObject",
                    "url": "https://www.allrecipes.com/thmb/vA-3lYLFiOdN_oKpCOYKjXKBGtU=/1500x0/filters:no_upscale():max_bytes(150000):strip_icc()/AR-16641-red-lentil-curry-ddmfs-4x3-step-04-07604da949f24d7a860404f3bd6cd39b.jpg"
                }
            ],
            "text": "Heat vegetable oil in a large skillet over medium heat; cook and stir onions in hot oil until caramelized, about 20 minutes."
        },
        {
            "@type": "HowToStep",
            "image": [
                {
                    "@type": "ImageObject",
                    "url": "https://www.allrecipes.com/thmb/1u67ZN5TSUMT5gVM2Tta03zL9ks=/1500x0/filters:no_upscale():max_bytes(150000):strip_icc()/AR-16641-red-lentil-curry-ddmfs-4x3-step-05-c2474f69619a441294b1c0591e5be09e.jpg"
                }
            ],
            "text": "Mix together curry paste, curry powder, turmeric, cumin, chili powder, salt, sugar, garlic, and ginger in a large bowl; stir into onions."
        },
        {
            "@type": "HowToStep",
            "image": [
                {
                    "@type": "ImageObject",
                    "url": "https://www.allrecipes.com/thmb/A6CblynVxifNNVK66MQe-_hPGrU=/1500x0/filters:no_upscale():max_bytes(150000):strip_icc()/AR-16641-red-lentil-curry-ddmfs-4x3-step-06-7749800f05f1457c8ea860e75e046c7c.jpg"
                }
            ],
            "text": "Increase heat to high and cook, stirring constantly, until fragrant, 1 to 2 minutes."
        },
        {
            "@type": "HowToStep",
            "image": [
                {
                    "@type": "ImageObject",
                    "url": "https://www.allrecipes.com/thmb/YAd48IftWi3yv7OyquENcQVIENI=/1500x0/filters:no_upscale():max_bytes(150000):strip_icc()/AR-16641-red-lentil-curry-ddmfs-4x3-step-07-3f061e4445aa4c0bb6e84a1081645551.jpg"
                }
            ],
            "text": "Stir in tomato puree and lentils; cook until warmed through."
        },
        {
            "@type": "HowToStep",
            "image": [
                {
                    "@type": "ImageObject",
                    "url": "https://www.allrecipes.com/thmb/Pw486Yf0eCQNclvlj2WY3lCMJ_E=/1500x0/filters:no_upscale():max_bytes(150000):strip_icc()/AR-16641-red-lentil-curry-ddmfs-4x3-beauty-567dd102b9c047d1b34dfe02d57749d8.jpg"
                }
            ],
            "text": "Serve and enjoy!"
        }
    ],
    "recipeYield": [
        "8"
    ]
}